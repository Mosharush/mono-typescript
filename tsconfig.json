{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "moduleDetection": "force",
    "composite": true,
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@mono/*": ["libs/*"],
    },
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "tmp"
  ],
  "include": ["**/*.ts", "**/*.js"]
}
